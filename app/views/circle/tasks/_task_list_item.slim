- task = ::TaskPresenter.new(task)

a.task href=circle_task_path(current_circle, task) class=task.css
  .task-icon
  .task-details
    .task-content
      .task-title= task.name
      .subtitle
        span= task.due_date
        - if task.status_message.present?
          span.bullet &bullet;
          span.status-message
           = task.status_message

    .task-stats
      span.task-badge.task-badge--users
        = "#{task.volunteers.count} / #{task.volunteer_count_required}"

      span.task-badge.task-badge--comments
        = task.comments.count